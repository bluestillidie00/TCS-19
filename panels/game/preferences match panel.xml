									<symbol value="debug_match_auto_highlight_players" />
									<symbol value="debug_match_scenarios_disallow_all_goals" />
									<symbol value="debug_match_scenarios_dodgy_keepers" />
									<symbol value="debug_match_scenarios_send_off_keeper" />
