									<symbol value="debug_match_scenarios_injure_keeper" />
									<symbol value="debug_match_scenarios_injure_player" />
									<symbol value="debug_match_scenarios_injure_just_human" />
									<symbol value="debug_match_scenarios_enable_flares" />
									<symbol value="debug_match_scenarios_instant_pen" />
									<symbol value="debug_match_scenarios_abba" />
									<symbol value="debug_match_scenario_all_fouls_are_pens" />
									<symbol value="debug_match_scenarios_slight_injure_player" />
									<symbol value="debug_match_scenario_uses_var" />
									<symbol value="debug_match_scenario_uses_var_stand" />
									<symbol value="debug_match_scenarios_bad_decisions" />
									<symbol value="debug_match_scenarios_show_offsides" />
									<symbol value="debug_match_has_hawkeye" />
	                <symbol value="debug_match_disable_ball_error" />
                  <symbol value="debug_match_all_female_cast"/>
								</list>
							</widget>

						</widget>
					</container>
				</container>

				<container class="scrolling_box">
					<!--<layout class="stick_to_sides_attachment" alignment="vertical" inset="6" />-->

					<container>
						<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_alignment="horizontal" horizontal_inset="0" />

						<!-- Highlights -->
						<widget class="subsection_box" id="cura">
							<translation id="title" translation_id="348124" type="use" value="Highlights[COMMENT: preferences: game settings section title]" />
							<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_alignment="horizontal" horizontal_inset="0" />

							<widget class="preferences_profile_panel" file="game/preferences profile panel match" />
						</widget>

						<!-- Processing -->
						<widget class="subsection_box" id="cura">
							<translation id="title" translation_id="330383" type="use" value="Processing[COMMENT: preferences: game settings section title]" />
							<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_alignment="horizontal" horizontal_inset="0" />

							<widget class="game_settings_viewer_panel" id="set4">
								<record id="table_properties">
