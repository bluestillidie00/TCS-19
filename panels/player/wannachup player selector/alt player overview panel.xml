					<container class="client_object_viewer_selector_panel" id="cos8" file="player/tcs/player overview small selector panel" save_session_state="true" minimum_width="310" default_width="-1" priority="3">
						<integer id="default_for_unemployed_managers" value="Pcrs"/>
						<integer id="default_for_international_managers_other_team" value="Pcrs"/>
