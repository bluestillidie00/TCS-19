				<container class="bordered_box" appearance="tcs/boxes/header/top" minimum_width="1300" default_width="-1"  priority="1">
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
					<widget class="player_personal_details_panel" file="player/tcs/tcs player personal details panel" id="ppdp">
						<record id="object_property" get_property="objt" set_property="objt"/>
					</widget>
				</container>

				<container>
					<layout class="horizontal_arrange" horizontal_layout="450,-1" horizontal_gap="0" />

					<container class="bordered_box" appearance="tcs/boxes/header/bottom left/paper" red_replacement="box_background" blue_replacement="secondary">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

						<widget class="player_positions_indicator_panel" id="ppi1" file="player/tcs/player positions indicator small horizontal" width="-1" priority="1">
							<record id="object_property" get_property="objt" set_property="objt"/>
						</widget>			
					</container>

					<container class="bordered_box" appearance="tcs/boxes/header/bottom right/paper" red_replacement="box_background" blue_replacement="secondary">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" /> 

							<widget class="player_attributes_panel" file="player/tcs/player attributes panel" id="patt" late_loading="true" minimum_width="640" default_width="-2" priority="2">
