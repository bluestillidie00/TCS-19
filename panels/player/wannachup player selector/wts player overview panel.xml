<!-- CHANGES MADE FOR WTS - REMOVED ONE BIG CONTAINER, CHANGED LAYOUTS OF MULTIPLE PANELS -->
<panel>
	<layout class="vertical_arrange" vertical_layout="190,400,-1" vertical_gap="0" />
	<layout class="stick_to_sides_attachment" alignment="all" inset="6" /> 

	<!-- Header with portrait & important info
	<widget class="player_personal_details_panel" id="ppdp">
		<record id="object_property" get_property="objt" set_property="objt"/>
	</widget>-->

	<!-- TOP -->
	<container class="horizontal_adaptive_container" offset="0" inset="0" gap="0" >

		<!-- PLAYER INFORMATION -->
		<container class="bordered_box" appearance="tcs/boxes/header/paper" minimum_width="1300" default_width="-1"  priority="1">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
			<widget class="player_personal_details_panel" file="player/tcs/tcs player personal details panel" id="ppdp">
				<record id="object_property" get_property="objt" set_property="objt"/>
			</widget>
		</container>

		<!-- SMALL PANEL ON TOP  -->
		<container class="client_object_viewer_selector_panel" id="dua0" file="player/tcs/player overview small selector panel" save_session_state="true" default_width="450" minimum_width="251"  priority="2">
			<integer id="default_for_unemployed_managers" value="teli"/>
			<integer id="default_for_international_managers_other_team" value="teli"/>
			<integer id="default_for_everyone_else" value="teli"/>
			<integer id="default_for_versus_mode" value="teli"/>
		</container>

		<container class="client_object_viewer_selector_panel" id="dua1" file="player/tcs/player overview small selector panel" save_session_state="true" default_width="400" minimum_width="320"   priority="3">
			<integer id="default_for_unemployed_managers" value="teli"/>
			<integer id="default_for_international_managers_other_team" value="teli"/>
			<integer id="default_for_everyone_else" value="teli"/>
			<integer id="default_for_versus_mode" value="teli"/>
		</container>
	</container>
	<!-- Middle row of large panels -->
	<container>

		<layout class="arrange_horizontal_attachment" layout="450,-1" offset="0" />
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

		<!-- Positions -->
		<widget class="player_positions_indicator_panel" id="ppi1" file="player/tcs/player positions indicator small horizontal wts"  priority="1">
			<record id="object_property" get_property="objt" set_property="objt"/>
		</widget>

		<!-- Default: Attributes -->
		<container class="horizontal_adaptive_container"  offset="0" inset="0" mode="distribute_equally" >
			<record id="default_properties" file="player/tcs/player overview big selector panel" save_session_state="true" />

			<container class="client_object_viewer_selector_panel" id="cos1" minimum_width="640" default_width="-1" priority="2">
				<widget class="player_attributes_panel" id="patt" late_loading="true">
					<translation id="title" translation_id="229822" type="use" value="Attributes" />
				</widget>
				<widget class="player_injury_panel" file="player/tcs/tcs player injury panel" id="IPrw" late_loading="true">
								<translation id="title" translation_id="447586" type="use" value="Medical Report" />
							</widget>
							<widget class="player_additional_stats_panel" file="player/tcs/tcs season stats" id="tcsstat" late_loading="true">
								<translation id="title" translation_id="385617" type="use" value="Season Stats" />
								<record id="object_property" get_property="objt" set_property="objt"/>
							</widget>

				<integer id="default_for_unemployed_managers" value="pat1"/>
				<integer id="default_for_international_managers_other_team" value="pat1"/>
				<integer id="default_for_everyone_else" value="pat1"/>
				<integer id="default_for_versus_mode" value="pat1"/>
			</container>

			<!-- Default: Comparison -->
			<container class="client_object_viewer_selector_panel"  id="cos3" minimum_width="330" default_width="450" priority="4">
				<integer id="default_for_unemployed_managers" value="pscR"/>
				<integer id="default_for_international_managers_other_team" value="pscR"/>
				<integer id="default_for_everyone_else" value="pscR"/>
				<integer id="default_for_versus_mode" value="pscR"/>
			</container>
		</container>
	</container>

	<container >
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		<!-- Smaller panels -->
		<container class="vertical_adaptive_container" offset="0" inset="0" gap="0" mode="distribute_equally">
			<!-- 4 small panels -->
			<container offset="0" inset="0" gap="0" minimum_height="150" priority="3">
				<layout class="horizontal_arrange" horizontal_layout="450,-1,-1,450" horizontal_gap="0" horizontal_inset="0" />

				<container class="client_object_viewer_selector_panel" id="cos9" file="player/tcs/player overview small selector panel" save_session_state="true"   default_width="450" priority="1">
					<integer id="default_for_unemployed_managers" value="pscR"/>
					<integer id="default_for_international_managers_other_team" value="pscR"/>
					<integer id="default_for_everyone_else" value="pTTS"/>
					<integer id="default_for_versus_mode" value="pscR"/>
				</container>
				<container class="client_object_viewer_selector_panel" file="player/tcs/player overview small selector panel" save_session_state="true"  default_width="-1" id="cosA" priority="2">
					<integer id="default_for_unemployed_managers" value="pcon"/>
					<integer id="default_for_international_managers_other_team" value="pcon"/>
					<integer id="default_for_everyone_else" value="pcon"/>
					<integer id="default_for_versus_mode" value="pcon"/>
				</container>
				<container class="client_object_viewer_selector_panel" file="player/tcs/player overview small selector panel" save_session_state="true" default_width="-1" id="cosB" priority="3">
					<integer id="default_for_unemployed_managers" value="ptri"/>
					<integer id="default_for_international_managers_other_team" value="ptri"/>
					<integer id="default_for_everyone_else" value="ptri"/>
					<integer id="default_for_versus_mode" value="ptri"/>
				</container>
				<container class="client_object_viewer_selector_panel" id="cosC" file="player/tcs/player overview small selector panel" save_session_state="true" default_width="460" priority="1">
					<integer id="default_for_unemployed_managers" value="pac1"/>
					<integer id="default_for_international_managers_other_team" value="pac1"/>
					<integer id="default_for_everyone_else" value="pac1"/>
					<integer id="default_for_versus_mode" value="pac1"/>
				</container>
			</container>

			<!-- 2 small panels and fitness-->
			<container minimum_height="150" priority="1">
				<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

				<container class="horizontal_adaptive_container" offset="0" gap="0" inset="0"  >
					<container class="client_object_viewer_selector_panel" id="cos7" file="player/tcs/player overview small selector panel" save_session_state="true" minimum_width="310" default_width="450" priority="1" >
						<integer id="default_for_unemployed_managers" value="Pfor"/>
						<integer id="default_for_international_managers_other_team" value="Pfor"/>
						<integer id="default_for_everyone_else" value="Pfor"/>
						<integer id="default_for_versus_mode" value="Pfor"/>
					</container>
					<container class="client_object_viewer_selector_panel" id="cos8" file="player/tcs/player overview small selector panel" save_session_state="true" minimum_width="310" default_width="-1" priority="3">
						<integer id="default_for_unemployed_managers" value="Pcrs"/>
						<integer id="default_for_international_managers_other_team" value="Pcrs"/>
						<integer id="default_for_everyone_else" value="Pcrs"/>
						<integer id="default_for_versus_mode" value="Pcrs"/>
					</container>
					<!-- Season stats-->
					<container class="bordered_box" width="650" priority="2" default_width="-2" >
						<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

						<widget class="player_additional_stats_panel" id="pcsp" file="player/player additional stats small">
							<record id="object_property">
								<list id="get_properties">
									<!-- Hide this panel if player is in inactive league-->
									<record id="object_property" get_property="objt" set_property="objt"/>
									<record id="object_property" get_property="Pila" set_property="hidn"/>
								</list>
							</record>
						</widget>
						<widget class="player_stats_panel" id="pssp" file="player/player stats small">
							<record id="object_property">
								<list id="get_properties">
									<!-- Show this panel if player is in inactive league-->
									<record id="object_property" get_property="Pila" set_property="Shwn"/>
									<record id="object_property" get_property="objt" set_property="objt"/>
								</list>
							</record>
						</widget>
					</container>

				</container>
			</container>
		</container>
	</container>
</panel>