<!-- THIS IS THE PANEL THAT SHOWS HOW A PLAYER HAS PERFORMED IN TRAINING -->
<panel>
	<attachment_group class="vertical_arrange" vertical_alignment="top,extend" />

	<!-- TRAINING RATING -->
	<container height="60" >
		<attachment_group class="horizontal_arrange" horizontal_alignment="left" horizontal_inset="0" vertical_inset="0" />

		<container class="bordered_box" width="180" red_replacement="primary">
			<layout class="vertical_arrange" vertical_layout="-1,-1" vertical_gap="0" />
			<record id="default_properties" colour="secondary"/>

			<!-- LABEL -->
			<widget class="label" alignment="bottom,left" id="rthd">
				<translation id="value" translation_id="466504" type="use" value="Training Rating[COMMENT: a rating of how well the player is getting on in training]" />
			</widget>

			<!-- TRAINING RATING -->
			<widget class="training_rating_label_formatted" id="rttx" auto_size="vertical" alignment="top,left" appearance="none" font="value" format="[%fraction#1-3.2]">
				<record id="object_property">
					<string id="get_property" value="Ptrt" />
					<string id="set_property" value="valu" />
				</record>
			</widget>
		</container>
	</container>

	<!-- DESCRIPTION -->
	<widget class="text" alignment="top,left" id="trst" />
</panel>