<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
	<boolean id="should_force_refresh" value="true" />

	<container>
		<attachment_group class="vertical_arrange" vertical_alignment="top,extend" vertical_offset="0" vertical_gap="0" horizontal_alignment="horizontal" horizontal_inset="0" />

		<container height="15">
			<layout class="stick_to_sides_attachment" alignment="left,vertical" inset="0" apply_to_children="true" />
			<string id="skin_style" value="title link" />
			<!-- Linked header -->
			<widget class="link_button" id="Ptin" section="Ptin" auto_size="horizontal">
				<translation id="text" translation_id="227953" type="use" value="Transfer Status" />
			</widget>
		</container>

		<container>
			<layout class="arrange_vertical_attachment" layout="54,-1" offset="0" gap="2"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

			<!-- Value, Asking price, Squad Status-->
			<container>
				<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />
				<layout class="arrange_horizontal_attachment" layout="-2,-2" offset="0" gap="4" />

				<!-- Value -->
				<container class="bordered_box" appearance="boxes/custom/transfer offer/value/subtle/paper">
					<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="-2" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

					<widget class="value_label" id="valu" font="value" size="large" alignment="left" auto_size="vertical" />
					<widget class="label" alignment="left,top" font="label" auto_size="vertical">
						<translation id="text" translation_id="227806" type="use" value="Value" />
					</widget>
				</container>

				<!-- Asking price -->
				<container class="bordered_box" id="askc" appearance="boxes/custom/transfer offer/value/subtle/paper">
					<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="-2" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

					<widget class="label" id="askw" font="value" size="large" alignment="left,can_scale" colour="positive" disabled_colour="faded text" auto_size="vertical"/>
					<widget class="label" id="askl" alignment="left,top" font="label" auto_size="vertical"/>
				</container>
			</container>
			
			
	<container>
		<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />
		<layout class="arrange_horizontal_attachment" layout="-4, 1,-3" offset="0" />

		<!-- Transfer status - appearance and text set in code -->
		<container>
			<layout class="arrange_vertical_attachment" alignment="top" gap="2" offset="0" />
			<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

			<widget class="button" id="trnc" alignment="centre" height="26" />
			<widget class="button" id="lonc" alignment="centre" height="26" />
		</container>

		<widget class="vertical_divider" />

		<!-- Transfer interest / Offers -->
		<widget class="table" id="pctb" layout="28, -1" mode="" fixed_size_rows="true" auto_size_rows="false" row_height="26" row_spacing="4">
			<list id="column_table_properties">
				<record index="1" left="4" />
			</list>

			<!-- Offers -->
			<container class="plain_box" appearance="" row="0" col="0" height="26">
				<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

				<!-- Change the box colour if there are/aren't offers -->
				<widget class="value_based_picture" id="tovp">
					<list id="value_list">
						<record value="0" file="boxes/custom/listed/no/paper" red_replacement="" />
						<record default_value="true" file="boxes/custom/listed/yes/paper" red_replacement="" />
					</list>
				</widget>

				<widget class="button" id="toff" alignment="centre" size="11" style="semi_bold" colour="white" disabled_colour="faded text" mouse_entered_event="shwb" mouse_exited_event="hipo"/>
			</container>

			<widget class="label" row="0" col="1" id="totx">
				<translation id="text" translation_id="435250" type="use" value="Bids Made[COMMENT: FR 10253, player overview; trandfers sub panel; label for number of bids (transfer offers) made for a player, use top 10 matches, just capitalised the M in Made for bug 134165]" />
			</widget>

			<!-- Interest -->
			<container class="plain_box" appearance="" row="1" col="0" height="26">
				<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

				<!-- Change the box colour if there are/aren't offers -->
				<widget class="value_based_picture" id="icvp">
					<list id="value_list">
						<record value="0" file="boxes/custom/listed/no/paper" red_replacement="" />
						<record default_value="true" file="boxes/custom/listed/yes/paper" red_replacement="" />
					</list>
				</widget>

				<widget class="button" id="iclb" alignment="centre" size="11" style="semi_bold" colour="white" disabled_colour="faded text" mouse_entered_event="shwi" mouse_exited_event="hipo"/>
			</container>

			<widget class="label" row="1" col="1" id="ictx">
				<translation id="text" translation_id="383284" type="use" value="Clubs Interested[COMMENT: FR 10253, player overview; trandfers sub panel; label for number of clubs interested in a player]" />
			</widget>
		</widget>
	</container>
	
	
		</container>
		
		
	</container>
</panel>