<panel height="32" width="180"> 
  <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

  <container >    
    <layout class="arrange_horizontal_attachment" layout="20,-1,50" offset="0" gap="0"/>   
    <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

    <container background_colour="secondary">
      <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
      <widget class="text" id="bsnm" alignment="centre" colour="primary" size="10">
        <animation class="translate_animation" trigger_id="hidden" trigger_value="false" end_mode="hold_auto_reverse_hold" tween="ease_out" coord_mode="relative_to_screen">
          <list id="storyboard">
            <record id="stop" interval="0" value="-1,-1"/>
            <record id="stop" interval="6.0" value="-1,-1"/>
            <record id="stop" interval="6.3" value="-0.5,-0.5"/>
            <record id="stop" interval="7.0" value="0,0"/>           
          </list>
        </animation>
      </widget>
    </container>
     
    <container background_colour="primary">
      <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
      <widget class="person_button" format="[%person#1-initial_surname]"  size="8" alignment="left,centre_y,can_scale" multiline="false" height="14" style="semi_bold" auto_size="horizontal" colour="secondary" enforce_style="true">
        <layout class="stick_to_sides_attachment" alignment="left" inset="10"/>
        <record id="object_property">
          <list id="get_properties">
            <record>
              <integer id="get_property" value="objt" />
              <integer id="set_property" value="valu" />
            </record>
          </list>
        </record>
        <animation class="translate_animation" trigger_id="hidden" trigger_value="false" end_mode="hold_auto_reverse_hold" tween="ease_out" coord_mode="relative_to_screen">
          <list id="storyboard">
            <record id="stop" interval="0" value="-1,0"/>
            <record id="stop" interval="6.0" value="-1,0"/>
            <record id="stop" interval="6.5" value="-0.5,0"/>
            <record id="stop" interval="7.5" value="0,0"/>           
          </list>
        </animation>
      </widget>

      <container background_colour="secondary">
        <animation class="translate_animation" trigger_id="hidden" trigger_value="false" end_mode="hold_auto_reverse_hold" tween="ease_out" coord_mode="relative_to_screen">
          <list id="storyboard">
            <record id="stop" interval="0" value="0,0"/>
            <record id="stop" interval="7.0" value="0,0"/>
            <record id="stop" interval="8.5" value="-1,0"/>            
          </list>
        </animation>
      </container>
      
    </container>
   	   <container background_colour="secondary">
      <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
     
       <!-- Player picture -->
    <widget class="object_portrait_picture" id="pict" scale_picture="true" image_alignment="centre">
 <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

      <record id="object_property">
        <integer id="get_property" value="objt"/>
        <integer id="set_property" value="objt"/>
      </record>
    </widget>
	 </container>
  </container>

</panel>
