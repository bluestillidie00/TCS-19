<panel >
	<attachment_group class="horizontal_arrange_autosize" horizontal_gap="0" />
	<colour name="eplpur" red="62" green="1" blue="94" />
	<colour name="eplgre" red="0" green="254" blue="130" />

	<container class="bordered_box" appearance="tcs/match/epl/sb/h" id="T1Co" width="9">
	</container>

	<container class="bordered_box" appearance="tcs/match/epl/sb/1" width="116" >
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/> 

		<widget class="match_team_logo_picture" id="HtLG" team_index="0" width="80">
			<record id="object_property">
				<integer id="get_property" value="objt" />
				<integer id="set_property" value="objt" />
			</record>
		</widget> 

	</container>

	<container class="bordered_box" appearance="tcs/match/epl/sb/2" width="120" >
		<layout class="vertical_arrange" vertical_layout="81,48,43" vertical_gap="0" />

		<container>
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

			<container class="bordered_box" appearance="tcs/match/epl/sb/logo" />
		</container>

		<container>
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/> 
			<widget class="text" id="Scor" size="25" alignment="centre" style="semi_bold" font="premiersansb" colour="eplpur">
		</widget>
		</container>

		<container>
			<layout class="arrange_vertical_attachment" alignment="middle" offset="0" gap="2" />
			<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" />

			<container id="ClkC">
				<layout class="arrange_vertical_attachment" alignment="middle" inset="5" gap="-2"/>
				<layout class="fit_children_attachment" alignment="vertical,fill" offset="4" gap="-2"/>
				<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" />

				<widget class="text" id="Mclk" auto_size="vertical" size="20" alignment="centre" style="semi_bold" colour="eplpur" font="plscore"/>
			</container>

			<container id="MijC" height="16">
				<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

				<widget class="text" id="Mijt" size="10" alignment="centre"  font="tcsfont" colour="match scoreboard clock"/>
			</container>

		</container>

	</container>

	<container class="bordered_box" appearance="tcs/match/epl/sb/1" width="116" >
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/> 

		<widget class="match_team_logo_picture" id="AtLG" team_index="1" width="80">
			<record id="object_property">
				<integer id="get_property" value="objt" />
				<integer id="set_property" value="objt" />
			</record>
		</widget> 

	</container>

	<container class="bordered_box" appearance="tcs/match/epl/sb/a" id="T2Co" width="9">
	</container>

</panel>