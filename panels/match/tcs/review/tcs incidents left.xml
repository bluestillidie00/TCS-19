<panel result_type_format="1" colour_team_names="true" colour_team_scores="true" >
  <layout class="arrange_vertical_attachment" alignment="top,extend" gap="0" offset="0"/>
  <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

  <!--background colour
  <widget class="picture" id="bkcl" height="8" file="boxes/custom/solid/paper" scale_picture="true" rthr="68">
  </widget>-->
  
  <!--team name and scores-->
  <container height="35">
    <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

    <widget class="picture" id="bkcl" auto_size="vertical" file="tcs/match overview/left" cached="true" rthr="68" alignment="centre">
    <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />
    <layout class="centre_in_parent_attachment" alignment="vertical" />
  </widget>

  <container>
  
    <layout class="arrange_horizontal_attachment" alignment="right,extend" gap="10" offset="10"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

    <!-- team name -->
    <widget class="text" id="mitn" size="12" font="tcsfont_u" style="semi_bold" alignment="right,centre_y"/>

    <!-- aggregate score -->
    <widget class="text" id="mita" auto_size="horizontal" spec="title1" alignment="right,centre_y" size="12" multiline="false"/>

    <!-- score -->
    <widget class="text" id="mits" auto_size="horizontal" alignment="right,centre_y" size="12" multiline="false" style="bold"/>

  </container>
  </container>

  <!--incidents-->
  <widget class="table" id="miit" layout="-1,30" mode="fill_rows" row_spacing="0" auto_size_rows="true" fixed_size_rows="false">

    <list id="column_properties">
      <record index="0" spec="text" auto_size="vertical" alignment="right,centre_y" size="small"/>
      <record index="1" alignment="centre" auto_size="vertical" size="small"/>
    </list>

    <list id="column_display_properties">
      <record index="0" id="text" top="4" bottom="4" />
      <record index="1" id="icon" left="4" top="4" bottom="4" />
    </list>

  </widget>

</panel>