<panel>

	<layout class="stick_to_sides_attachment" alignment="all" inset="6" apply_to_children="true" />

	<widget class="team_report_request_report_panel" id="nort" />

	<container id="sort">
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

		<!--Overview-->
		<container>
			<layout class="arrange_horizontal_attachment" layout="-1, 360" offset="0" />
			<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />
			<container>
				<layout class="arrange_horizontal_attachment" layout="-1,-1" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />
				<!--Pros-->
				<container class="bordered_box" >
					<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

					<container class="bordered_box" height="45" red_replacement="pro high">
						<layout class="arrange_vertical_attachment" alignment="middle" offset="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="10" apply_to_children="true" />

						<widget class="text" auto_size="vertical" alignment="left" spec="text" font="text" size="xlarge" colour="white">
							<translation id="text" translation_id="420664" type="use" value="Strengths[COMMENT: team report, strengths (positives) section]" />
						</widget>
					</container>

					<widget class="table" mode="fill_rows" id="prot" layout="-1" inset="0"  fixed_size_rows="false" row_height="20" row_spacing="10" auto_size_rows="true" />
				</container>
				<!--Cons-->
				<container class="bordered_box" >
					<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

					<container class="bordered_box" height="45" red_replacement="con high">
						<layout class="arrange_vertical_attachment" alignment="middle" offset="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="10" apply_to_children="true" />

						<widget class="text" auto_size="vertical" alignment="left" spec="text" font="text" size="xlarge" colour="white">
							<translation id="text" translation_id="420665" type="use" value="Weaknesses[COMMENT: team report, weaknesses (negatives) section]" />
						</widget>
					</container>

					<widget class="table" mode="fill_rows" id="weak" layout="-1" inset="0" fixed_size_rows="false" row_height="20" row_spacing="10" auto_size_rows="true" />
				</container>

			</container>

			<!--Team Details-->
			<container class="bordered_box" red_replacement="dark_box_background">
				<layout class="arrange_vertical_attachment" layout="200,4,409" offset="0" gap="2" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

				<container>
					<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />
					<widget class="club_overview_details_panel" id="clod" file="club/club overview details panel team report">
						<record id="object_property">
							<list id="get_properties">
								<record>
									<integer id="get_property" value="Tisc" />
									<integer id="set_property" value="Shwn" />
									<boolean id="dont_set_object" value="true" />
								</record>
								<record>
									<integer id="get_property" value="objt" />
									<integer id="set_property" value="objt" />
								</record>
							</list>
						</record>
					</widget>

					<widget class="club_overview_details_panel" id="nlod" file="nation/nation overview details panel team report">
						<record id="object_property">
							<list id="get_properties">
								<record>
									<integer id="get_property" value="Tisn" />
									<integer id="set_property" value="Shwn" />
									<boolean id="dont_set_object" value="true" />
								</record>
								<record>
									<integer id="get_property" value="objt" />
									<integer id="set_property" value="objt" />
								</record>
							</list>
						</record>
					</widget>
				</container>

				<widget class="horizontal_divider" />

				<container id="pitC">
					<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="0" />

					<widget class="link_button_title" section="sddh">
						<layout class="stick_to_sides_attachment" alignment="left"  inset="0" />

						<translation id="text" translation_id="316743" type="use" value="Squad Depth[COMMENT: team report; squad depth heading]" />
					</widget>

					<container>
						<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />

						<widget class="pitch_squad_depth" id="pict" vertical="true" pitch_draw_grass="false" line_width="1.0" pitch_dont_draw_ads="true" pitch_keep_selected_icons="true" pitch_line_colour="text">
							<boolean id="pitch_draw_goals" value="false" />
							<boolean id="pitch_draw_markings" value="true" />
							<boolean id="pitch_allow_player_selection" value="false" />
						</widget>
					</container>
				</container>
			</container>

		</container>
	</container>

</panel>